#!/usr/bin/make -f
# See debhelper(7) (uncomment to enable)
# output every command that modifies files on the build system.
export DH_VERBOSE = 1
# Name of the installed module
export PYBUILD_NAME = mailman

# see EXAMPLES in dpkg-buildflags(1) and read /usr/share/dpkg/*
DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

# see FEATURE AREAS in dpkg-buildflags(1)
#export DEB_BUILD_MAINT_OPTIONS = hardening=+all

# see ENVIRONMENT in dpkg-buildflags(1)
# package maintainers to append CFLAGS
#export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
# package maintainers to append LDFLAGS
#export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed


# main packaging script based on dh7 syntax
%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_auto_test:


override_dh_auto_install:
	dh_auto_install
	install -o list -g list -m 2755 -d debian/mailman3-core/var/lib/mailman3/
	install -o list -g list -m 2755 -d debian/mailman3-core/var/lib/mailman3/bin
	mv debian/mailman3-core/usr/bin/runner debian/mailman3-core/var/lib/mailman3/bin/
	mv debian/mailman3-core/usr/bin/master debian/mailman3-core/var/lib/mailman3/bin/
	# Soon to be removed from mailman3-core
	mv debian/mailman3-core/usr/bin/onebounce debian/mailman3-core/var/lib/mailman3/bin/
	install -o list -g list -m 755 -d debian/mailman3-core/etc/mailman3/
	install -o list -g list -m 644 debian/contrib/mailman.cfg debian/mailman3-core/etc/mailman3/mailman.cfg
	install -o root -g root -d debian/mailman3-core/lib/systemd/system/
	install -o list -g list -m 644 debian/contrib/mailman.service debian/mailman3-core/lib/systemd/system/mailman.service

# dh_make generated override targets
# This is example for Cmake (See https://bugs.debian.org/641051 )
#override_dh_auto_configure:
#	dh_auto_configure -- \
#	-DCMAKE_LIBRARY_PATH=$(DEB_HOST_MULTIARCH)




